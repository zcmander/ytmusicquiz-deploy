[
    {
        "name": "ytmusicquiz-proxy",
        "image": "074957091972.dkr.ecr.eu-west-1.amazonaws.com/ytmusicquiz-proxy:latest",
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "eu-west-1",
              "awslogs-group": "ytmusicquiz",
              "awslogs-stream-prefix": "ytmusicquiz-proxy"
            }
        }
    },
    {
        "name": "ytmusicquiz-dashboard",
        "image": "074957091972.dkr.ecr.eu-west-1.amazonaws.com/ytmusicquiz-dashboard:latest",
        "essential": true,
        "portMappings": [
            {
                "containerPort": 81,
                "hostPort": 81
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "eu-west-1",
              "awslogs-group": "ytmusicquiz",
              "awslogs-stream-prefix": "ytmusicquiz-dashboard"
            }
        }
    },
    {
        "name": "ytmusicquiz",
        "image": "074957091972.dkr.ecr.eu-west-1.amazonaws.com/ytmusicquiz:latest",
        "essential": true,
        "portMappings": [
            {
                "containerPort": 8000,
                "hostPort": 8000
            }
        ],
        "environment": [
            { "name": "DJANGO_SETTINGS_MODULE", "value": "ytmusicquiz.settings_production" },
            { "name": "DATABASE_HOST", "value": "${rds_host}" },
            { "name": "DATABASE_PORT", "value": "${rds_port}" },
            { "name": "DATABASE_NAME", "value": "ytmusicquiz" },
            { "name": "DATABASE_USERNAME", "value": "${rds_username}" },
            { "name": "DATABASE_PASSWORD", "value": "${rds_password}" }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "eu-west-1",
              "awslogs-group": "ytmusicquiz",
              "awslogs-stream-prefix": "ytmusicquiz"
            }
        }
    },
    {
        "name": "ytmusicquiz-static",
        "image": "074957091972.dkr.ecr.eu-west-1.amazonaws.com/ytmusicquiz-static:latest",
        "essential": true,
        "portMappings": [
            {
                "containerPort": 82,
                "hostPort": 82
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "eu-west-1",
              "awslogs-group": "ytmusicquiz",
              "awslogs-stream-prefix": "ytmusicquiz-static"
            }
        }
    },
    {
        "name": "ytmusicquiz-worker",
        "image": "074957091972.dkr.ecr.eu-west-1.amazonaws.com/ytmusicquiz:latest",
        "essential": true,
        "environment": [
            { "name": "DJANGO_SETTINGS_MODULE", "value": "ytmusicquiz.settings_production" },
            { "name": "DATABASE_HOST", "value": "${rds_host}" },
            { "name": "DATABASE_PORT", "value": "${rds_port}" },
            { "name": "DATABASE_NAME", "value": "ytmusicquiz" },
            { "name": "DATABASE_USERNAME", "value": "${rds_username}" },
            { "name": "DATABASE_PASSWORD", "value": "${rds_password}" }
        ],
        "command": [
            "python",
            "manage.py",
            "runworker",
            "background-tasks"
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "eu-west-1",
              "awslogs-group": "ytmusicquiz",
              "awslogs-stream-prefix": "ytmusicquiz-worker"
            }
        }
    },
    {
        "name": "ytmusicquiz-redis",
        "image": "redis",
        "essential": true,
        "portMappings": [
            {
                "containerPort": 6379,
                "hostPort": 6379
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "eu-west-1",
              "awslogs-group": "ytmusicquiz",
              "awslogs-stream-prefix": "ytmusicquiz-redis"
            }
        }
    }
  ]